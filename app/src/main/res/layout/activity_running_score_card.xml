            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="6"
                android:textAlignment="center" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/to_score_card_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/standard_dimen"
        android:background="@drawable/no_school_button_enabled_drawable"
        android:padding="@dimen/standard_dimen"
        android:text="Standpunkt, eksamen og fravær"
        android:textColor="@color/colorWhite" />

