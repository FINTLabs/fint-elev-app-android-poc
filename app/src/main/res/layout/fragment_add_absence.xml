<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddAbsenceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100"
        android:background="@color/colorTransparent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Legg til fravær"
            android:textSize="24sp"
            android:textColor="@color/colorWhite"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="horizontal"
            android:gravity="center">

            <NumberPicker
                android:id="@+id/number_picker_absence_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_dimen">

            </NumberPicker>
            <NumberPicker
                android:id="@+id/number_picker_absence_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/standard_dimen">

            </NumberPicker>
        </LinearLayout>
        <Button
            android:id="@+id/absence_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oppdater fravær"
            android:backgroundTint="@color/colorPrimary" />

    </LinearLayout>

</FrameLayout>