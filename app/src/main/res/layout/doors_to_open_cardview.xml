<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/fab_margin">

    <android.support.v7.widget.CardView
        android:id="@+id/doors_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@color/colorLightGray"
            >

            <ImageView
                android:id="@+id/door_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/standard_dimen"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/door_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/door_photo"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/door_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/door_name"
                android:layout_toRightOf="@+id/door_photo" />

            <Button
                android:id="@+id/button_open_door"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ã…pne meg"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:textAlignment="center"
                android:backgroundTint="@color/colorPrimary"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>